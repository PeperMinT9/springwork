<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.3.xsd">
	
	<!-- 1 -->
	<bean id="mes1" class="study1.Message1" scope = "prototype"/>
	<bean id="mes2" class="study1.Message2"></bean>

	<!-- 2 -->
	<!-- 생성자 주입 -->
	<bean id = "my" class = "study2.MyInfo">
		<constructor-arg value = "이무개"/>
		<constructor-arg value = "23"/>
		<constructor-arg>
			<value>여행을 좋아합니다</value>
		</constructor-arg>
	</bean>
	<!-- 생성자에 my 레퍼런스값 주입, 학교는 setter 주입 -->
	<bean id = "stu" class = "study2.Student">
		<constructor-arg ref = "my"/>
		<property name="schoolName" value = "청담고"/>
	</bean>
	
	<!-- 3 -->
	<bean id = "ms" class = "study3.MyShop">
		<constructor-arg value = "청자켓"/>
		<property name = "su" value = "1"/>
		<property name = "dan" value = "15000"/>
	</bean>
	<bean id = "ps" class = "study3.Person">
		<constructor-arg value = "이무개"/>
		<constructor-arg value = "역삼동"/>
		<property name = "myShop" ref = "ms"/>
	</bean>
	
	<!-- 4 -->
	<bean id = "canada_tire" class = "study4.CanadaTire"/>
	<bean id = "korea_tire" class = "study4.KoreaTire"/>
	
	<bean id = "car1" class = "study4.Car">
		<constructor-arg ref = "korea_tire"/>
	</bean>
	<bean id = "car2" class = "study4.Car">
		<constructor-arg ref = "canada_tire"/>
	</bean>
</beans>
